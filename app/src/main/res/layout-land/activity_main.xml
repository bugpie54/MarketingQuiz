<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/quiz_img" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/text_margin_bottom"
                android:text="@string/title"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/text_margin_bottom"
                android:text="@string/header"
                android:textSize="23sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/name"
                android:inputType="textCapWords"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_margin_bottom"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:layout_marginTop="@dimen/text_margin_top"
                android:text="@string/question1"
                android:textAppearance="@style/questionText" />

            <RadioGroup
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/answers_style"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/q1_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q1_a1"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <RadioButton
                    android:id="@+id/q1_a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q1_a2"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <RadioButton
                    android:id="@+id/q1_a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q1_a3"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_margin_bottom"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:layout_marginTop="@dimen/text_margin_top"
                android:text="@string/question2"
                android:textAppearance="@style/questionText" />

            <RadioGroup
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/answers_style"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/q2_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q2_a1"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <RadioButton
                    android:id="@+id/q2_a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q2_a2"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <RadioButton
                    android:id="@+id/q2_a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q2_a3"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_margin_bottom"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:layout_marginTop="@dimen/text_margin_top"
                android:text="@string/question3"
                android:textAppearance="@style/questionText" />

            <RadioGroup
                android:id="@+id/question3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/answers_style"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/q3_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q3_a1"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <RadioButton
                    android:id="@+id/q3_a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q3_a2"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <RadioButton
                    android:id="@+id/q3_a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q3_a3"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_margin_bottom"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:layout_marginTop="@dimen/text_margin_top"
                android:text="@string/question4"
                android:textAppearance="@style/questionText" />

            <RadioGroup
                android:id="@+id/question4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/answers_style"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/q4_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q4_a1"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <RadioButton
                    android:id="@+id/q4_a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q4_a2"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <RadioButton
                    android:id="@+id/q4_a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q4_a3"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_margin_bottom"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:layout_marginTop="@dimen/text_margin_top"
                android:text="@string/question5"
                android:textAppearance="@style/questionText" />

            <CheckBox
                android:id="@+id/q5_a1_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/answers_style"
                android:text="@string/q5_a1"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="italic" />

            <CheckBox
                android:id="@+id/q5_a2_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/answers_style"
                android:text="@string/q5_a2"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="italic" />

            <CheckBox
                android:id="@+id/q5_a3_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/answers_style"
                android:text="@string/q5_a3"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="italic" />

        </LinearLayout>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:onClick="submitAnswer"
            android:text="@string/submit_answer" />

    </RelativeLayout>
</ScrollView>
